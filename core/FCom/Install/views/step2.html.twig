{% set w = SESSION.get('w') %}

<form class="form-horizontal" method="post" action="{{APP.href('install/step2')}}">
    <input type="hidden" name="X-CSRF-TOKEN" value="{{ SESSION.csrfToken() }}"/>
    <div class="panel-heading">
        <h1 class="panel-title">{{ 'Step 2 of 3: First Admin User' |_ }}</h1>
    </div>

    <div class="form-group">
        <label for="admin-firstname" class="control-label col-lg-4 required">{{ 'First Name' |_ }}</label>
        <div class="col-lg-7">
            <input type="text" class="form-control" id="admin-firstname" name="w[admin][firstname]" value="{{w.admin.firstname}}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="admin-lastname" class="control-label col-lg-4 required">{{ 'Last Name' |_ }}</label>
        <div class="col-lg-7">
            <input type="text" class="form-control" id="admin-lastname" name="w[admin][lastname]" value="{{w.admin.lastname}}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="db-username" class="control-label col-lg-4 required">{{ 'Email' |_ }}</label>
        <div class="col-lg-7">
            <input type="email" class="form-control" id="admin-email" name="w[admin][email]" value="{{w.admin.email}}" placeholder="ex:john@example.com" required>
        </div>
    </div>
    <div class="form-group">
        <label for="admin-username" class="control-label col-lg-4 required">{{ 'User Name' |_ }}</label>
        <div class="col-lg-7">
            <input type="text" class="form-control" id="admin-username" name="w[admin][username]" value="{{w.admin.username}}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="admin-password" class="control-label col-lg-4 required">{{ 'Password' |_ }}</label>
        <div class="col-lg-7">
            <input type="password" class="form-control has-progress-bar" id="admin-password" name="w[admin][password]" value="{{w.admin.password}}" placeholder="*****" required pattern=".{6,}">
        </div>
    </div>
    <div class="form-group">
        <label for="admin-password_confirm" class="control-label col-lg-4 required">{{ 'Confirm Password' |_ }}</label>
        <div class="col-lg-7">
            <input type="password" class="form-control" id="admin-password_confirm" name="w[admin][password_confirm]" value="{{w.admin.password_confirm}}" placeholder="*****" required pattern=".{6,}">
        </div>
    </div>

    <ul class="list-group list-group-flush">
        <li class="list-group-item clearfix">
            <!--<a class="btn btn-link pull-left" name="do" value="back" href="{{APP.href('install/step1')}}">&laquo; {{ 'Back' |_ }}</a>-->
            <button type="submit" class="btn btn-primary pull-right" name="do" value="next">{{ 'Continue' |_ }}</button>
        </li>
    </ul>
</form>
