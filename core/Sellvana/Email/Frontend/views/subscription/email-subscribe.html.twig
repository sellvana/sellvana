<div class="f-site-main" role="main">
    <div class="container">
        <form action="{{ APP.href('email/subscribe') }}" method="post" id="f-newsletter" role="form">
            <input type="hidden" name="X-CSRF-TOKEN" value="{{ SESSION.csrfToken() }}"/>
            <fieldset class="f-newsletter-block">
                <header class="f-page-header">
                    <h1 class="f-page-title">{{ 'Subscribe Newsletter' |_ }}</h1>
                </header>
                {{ THIS.view('core/messages') | raw }}
                <div class="form-group">
                    <label for="email" class="control-label">{{ "Email" | _ }}</label>
                    <div class="controls">
                        <input type="email" name="email" class="required form-control" id="email" placeholder="{{ 'Enter your email'|_ }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg" type="submit"><span>{{"Subsribe"|_}}</span></button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
