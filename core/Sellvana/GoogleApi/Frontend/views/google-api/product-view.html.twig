{% set conf = CONFIG.get('modules/Sellvana_GoogleApi') %}

{% if conf.ua_enable and conf.ua_key and conf.ua_enable_ec %}
    {% set product = APP.get('current_product') %}
    {% set ga = APP.instance('Sellvana_GoogleApi_Frontend').getProductData() %}
    <script>

        ga('ec:addProduct', {{ UTIL.toJson(ga.item) | raw }});
        ga('ec:setAction', 'detail');

        gaProductForms[{{ ga.id }}] = ga.item;

    </script>
{% endif %}