{% set products = APP.instance('Sellvana_Sales_Admin_Dashboard').getTopProducts() %}

<div class='box-content' style="height: 300px; overflow-y: scroll">
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>{{ "SKU"|_ }}</th>
            <th>{{ "Name"|_ }}</th>
            <th>{{ "Revenue"|_ }}</th>
            <th>{{ "Qty"|_ }}</th>
            <th>{{ "Profit ($)"|_ }}</th>
            <th>{{ "Profit (%%)"|_ }}</th>
        </tr>
        </thead>
        {% if products is empty %}
        <tr>
            <td colspan="6">{{ "No data"|_ }}</td>
        </tr>
        {% else %}
            {% for product in products %}
                <tr>
                    <td>{{ product.get('product_sku') }}</td>
                    <td>{{ product.get('product_name') }}</td>
                    <td>{{ product.get('revenue') }}</td>
                    <td>{{ product.get('qty') }}</td>
                    <td>{{ product.get('profit_fixed') }}</td>
                    <td>{{ product.get('profit_pc') }}</td>
                </tr>
            {% endfor %}
        {% endif %}
    </table>
</div>
