{% set couponCodes = THIS.get('cart').getCouponCodes() %}

{{ THIS.get('label') }}

<form action="{{ APP.href('cart/remove_coupon') }}" method="post">
    <input type="hidden" name="X-CSRF-TOKEN" value="{{ SESSION.csrfToken() }}"/>
{% for code in couponCodes %}
    [<button type="submit" name="coupon_code" value="{{ code }}">X</button> {{ code }}]
{% endfor %}
</form>