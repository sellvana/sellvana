                                currCode = $el.val();
                            } else if ($el.hasClass('customer-group')) {
                                groupId = $el.val();
                            }
                        });
                        itemHash += groupId + siteId + currCode;
                        valid = (matchingHashes[itemHash] == 1);
                    });
                }
                return valid;
            }

