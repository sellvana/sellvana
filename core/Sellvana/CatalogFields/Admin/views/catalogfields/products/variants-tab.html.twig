                            return;
                        }

                        var $item = $(this);
                        if($item[0] === $parent[0]) {
                            // same as validated element, return
                            return;
                        }
                        var $priceType = $item.find('.price-type');
                        if($priceType.length == 0) {
                            // no price type return
                            return;
                        }
                        var itemHash = $priceType.val();

                        var $itemFields = $item.find('.customer-group, .site, .currency');
