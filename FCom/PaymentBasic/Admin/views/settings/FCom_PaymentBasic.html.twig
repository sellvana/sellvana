{% set c = THIS.get('model') %}

<h2>{{ "Payment Basic Settings"|_}}</h2>

<div class="accordion accordion-blue panel-group" id="settings-FCom_PaymentBasic">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="#" class="accordion-toggle">{{ 'Basic Payment Settings'|_ }}</a>
        </div>
        <div class="panel-collapse accordion-body in" id="settings-FCom_PaymentBasic-group0">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Label'|_ }}</label>
                    <div class="col-md-5">
                        <input class="form-control" type="text" name="config[modules][FCom_PaymentBasic][label]" value="{{ c.get('modules/FCom_PaymentBasic/label') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Sort Order'|_ }}</label>
                    <div class="col-md-5">
                        <input class="form-control" type="text" name="config[modules][FCom_PaymentBasic][sort_order]" value="{{ c.get('modules/FCom_PaymentBasic/sort_order') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Custom Order Status On Payment'|_ }}</label>
                    <div class="col-md-5">
                        <input type="hidden" name="config[modules][FCom_PaymentBasic][order_status_authorized]" value="0"/>
                        <input class="switch-cbx" name="config[modules][FCom_PaymentBasic][order_status_authorized]" {% if c.get("modules/FCom_PaymentBasic/order_status_authorized") == 1 %}checked="checked"{% endif %} value='1' type='checkbox'>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
