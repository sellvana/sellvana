- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('Area Settings')
            %div
                %table
                    %tr
                        %td = $this->_('IP: Mode')
                        %td
                            %textarea(name="config[mode_by_ip][FCom_Cron]" style="width:400px; height:100px")<
                                = $c->get('mode_by_ip/FCom_Cron')
        .group
            %h3
                %a(href="#") = $this->_('Cron Dispatch')
            %div
                %table
                    %tr
                        %td = $this->_('Leeway Minutes')
                        %td
                            %input(type="text" name="config[modules][FCom_Cron][leeway_mins]"
                                value="#{$c->get('modules/FCom_Cron/leeway_mins')}")
                    %tr
                        %td = $this->_('Timeout Minutes')
                        %td
                            %input(type="text" name="config[modules][FCom_Cron][timeout_mins]"
                                value="#{$c->get('modules/FCom_Cron/timeout_mins')}")
                    %tr
                        %td = $this->_('Wait Seconds')
                        %td
                            %input(type="text" name="config[modules][FCom_Cron][wait_sec]"
                                value="#{$c->get('modules/FCom_Cron/wait_sec')}")
