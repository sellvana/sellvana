{% set c = THIS.get('model') %}
{% set fieldData = { model: c, id_prefix:'FCom_Customer', name_prefix:'config[modules][FCom_Customer]' } %}
{% import THIS.view('admin/form-elements').twigName() as forms %}
<h2>{{ "Customer Settings"|_}}</h2>
{{ forms.accordion_start({id:'settings-FCom_Customer'}) }}
     {{ forms.accordion_panel_start({label:'General Settings'|_, id:'settings-FCom_Customer-group0', in:1}) }}
        <div class="form-group">
            <label class="col-md-2 control-label">{{ 'Use Gravatar'|_ }}</label>
            <div class="col-md-5">
                <input type="hidden" name="config[modules][FCom_Customer][use_gravatar]" value="0" />
                <input type="checkbox" class="switch-cbx" name="config[modules][FCom_Customer][use_gravatar]" value="1"
                        {{ c.get('modules/FCom_Customer/use_gravatar') == '1' ? 'checked="checked"' : '' }} />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">{{ 'Strong Password Security'|_ }}</label>
            <div class="col-md-5">
                <input type="hidden" name="config[modules][FCom_Customer][password_strength]" value="0" />
                <input type="checkbox" class="switch-cbx" name="config[modules][FCom_Customer][password_strength]" value="1"
                        {{ c.get('modules/FCom_Customer/password_strength') == '1' ? 'checked="checked"' : '' }} />
            </div>
        </div>
        {{ forms.input(fieldData|merge({field:'recent_day', label:'Customer Recent Days'|_, attr: 'data-rule-number="true"', value:c.get('modules/FCom_Customer/recent_day')})) }}
    {{ forms.accordion_panel_end }}
{{ forms.accordion_end }}

