
<div class='middle-container'>
    <div class='middle-row'>
        <div class='middle-wrapper'>
            <div class='login-container-header'>
                <div class='container'>
                    <div class='row'>
                        <div class='col-sm-12'>
                            <div class='text-center'>
                                <img width="121" height="31" src="{{ APP.src('@FCom_Core/img/logo.svg') }}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='login-container'>
                <div class='container'>
                    <div class='row'>
                        <div class='col-lg-2 col-lg-offset-5 col-sm-4 col-sm-offset-4'>
                            {{ THIS.view('core/messages') | raw }}
                            <h1 class='text-center title'>{{ 'Sign in'|_ }}</h1>
                            <form action='{{ APP.href('login') }}' class='validate-form' method='post'>
                                <div class='form-group'>
                                    <div class='controls with-icon-over-input'>
                                        <input value="" placeholder="{{ 'E-mail'|_ }}" class="form-control" data-rule-required="true" name="login[username]" type="text" />
                                        <i class='icon-user text-muted'></i>
                                    </div>
                                </div>
                                <div class='form-group'>
                                    <div class='controls with-icon-over-input'>
                                        <input value="" placeholder="{{ 'Password'|_ }}" class="form-control" data-rule-required="true" name="login[password]" type="password" />
                                        <i class='icon-lock text-muted'></i>
                                    </div>
                                </div>
                                <div class='checkbox'>
                                    <label for='remember_me'>
                                        <input id='remember_me' name='remember_me' type='checkbox' value='1'>
                                        {{ 'Remember me'|_ }}
                                    </label>
                                </div>
                                <button type="submit" class='btn btn-block'>{{ 'Sign in'|_ }}</button>
                            </form>
                            <div class='text-center'>
                                <hr class='hr-normal'>
                                <a href='{{ APP.href('password/recover') }}'>{{ 'Forgot your password?'|_ }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>