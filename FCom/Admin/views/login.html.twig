<div class='middle-container'>
    <div class='middle-row'>
        <div class='middle-wrapper'>
            <div class='login-container-header'>
                <div class='container text-center'>
                    <img width="150" src="{{ APP.src('@FCom_Core/img/logo.svg') }}" />
              </div>
            </div>
            <div class='login-container'>
                <div class='container'>
                    {{ THIS.view('core/messages') | raw }}
                    <form id="login-form" action='{{ APP.href('login') }}' class='validate-form' method='post'>
                        <div class='form-group'>
                            <label for="login-username" class="control-label">{{ "User Name" | _ }}</label>
                            <div class='controls with-icon-over-input'>
                                <input id="login-username" value="" placeholder="{{ 'E-mail'|_ }}" class="required form-control"
                                        data-rule-required="true" name="login[username]" type="text" />
                            </div>
                        </div>
                        <div class='form-group'>
                            <label for="login-password" class="control-label">{{ "Password" | _ }}</label>
                            <div class='controls with-icon-over-input'>
                                <input id="login-password" value="" placeholder="{{ 'Password'|_ }}" class="required form-control"
                                       data-rule-required="true" name="login[password]" type="password" />
                            </div>
                        </div>
                        <div class='checkbox'>
                            <label for='remember_me'>
                                <input id='remember_me' name='remember_me' type='checkbox' value='1'>
                                {{ 'Remember me'|_ }}
                            </label>
                        </div>
                        <button type="submit" class='btn btn-primary btn-lg btn-block'>{{ 'Sign in'|_ }}</button>
                    </form>
                    <div class='text-center'>
                        <hr class='hr-normal'>
                        <a href='{{ APP.href('password/recover') }}'>{{ 'Forgot your password?'|_ }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#login-form').validate();
    })
})
</script>
