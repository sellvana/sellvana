<div class='middle-container'>
    <div class='middle-row'>
        <div class='middle-wrapper'>
            <div class='login-container-header'>
                <div class='container'>
                    <div class='row'>
                        <div class='col-sm-12'>
                            <div class='text-center'>
                                <img width="121" height="31" src="{{ APP.src('@FCom_Core/img/logo.svg') }}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='login-container'>
                <div class='container'>
                    {{ THIS.view('core/messages') | raw }}
                    <div class='row'>
                        <div class='col-lg-2 col-lg-offset-5 col-sm-4 col-sm-offset-4'>
                            <h1 class='text-center title'>{{ 'Recover password'|_ }}</h1>
                            <form id="password-form" action='{{ APP.href('password/recover') }}' class="validate-form" method='post'>
                                <div class='form-group'>
                                    <div class='controls with-icon-over-input'>
                                        <input value="" placeholder="{{ 'E-mail'|_ }}" class="required form-control" name="email" type="text" />
                                        <i class='icon-user text-muted'></i>
                                    </div>
                                </div>
                                <button type="submit" class='btn btn-block'>{{ 'Send me the instructions'|_ }}</button>
                            </form>
                            <div class='text-center'>
                                <hr class='hr-normal'>
                                <a href='{{ APP.href('login') }}'>
                                    <i class='icon-chevron-left'></i>
                                    {{ 'I already know my password'|_ }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#password-form').validate();
    })
})
</script>
