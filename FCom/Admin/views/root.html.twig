<!DOCTYPE html>
<html {{ THIS.getHtmlAttributes() | raw }}>
<head>
    {{ THIS.hook('head') | raw }}
</head>
<body class="{{ THIS.getBodyClass() }}">
    {% if APP.instance('FCom_Admin_Model_User').isLoggedIn() %}
        {{ THIS.view('admin/header') | raw }}
        <div class="wrapper f-admin-container" id="root-layout">
            {{ THIS.view('admin/nav') | raw }}
            <section id="content">
                <div class="container f-admin-main" id="main-container">
                    <div id="content-wrapper">
                        {{ THIS.hook('main')|raw }}
                    </div>
                </div>
            </section>
        </div>
    {% else %}
        {{ THIS.hook('main') | raw }}
    {% endif %}

    {{ THIS.hook('before_body_end') | raw }}
</html>
