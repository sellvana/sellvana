{% set c = THIS.get('model') %}

<h2>{{ "Email Settings"|_}}</h2>

<div class="accordion accordion-blue panel-group" id="settings-FCom_Email">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="#" class="accordion-toggle">{{ 'Email Sending'|_ }}</a>
        </div>
        <div class="panel-collapse accordion-body in" id="settings-FCom_Email-group0">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'SMTP Host'|_ }}</label>
                    <div class="col-md-5">
                        <input class="form-control" type="text" name="config[modules][FCom_Email][smtp_host]" value="{{ c.get('modules/FCom_Email/smtp_host') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Sendmail From'|_ }}</label>
                    <div class="col-md-5">
                        <input class="form-control"type="text" name="config[modules][FCom_Email][sendmail_from]" value="{{ c.get('modules/FCom_Email/sendmail_from') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Default Handler'|_ }}</label>
                    <div class="col-md-5">
                        <select class="form-control" name="config[modules][FCom_Email][default_handler]">
                            {{ UTIL.optionsHtml(UTIL.arrayToOptions(APP.instance('BEmail').getHandlers(), 'description'), c.get('modules/FCom_Email/default_handler'))|raw }}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
