
<div class="block block-subscribe">
    <div class="block-title">
        <strong><span>{{ "Newsletter" |_ }}</span></strong>
    </div>
    <form action="{{ APP.href('newsletter/subscriber/form/') }}" method="post" id="newsletter-validate-detail">
        <div class="block-content">
            <label for="newsletter">{{ "Sign Up for Our Newsletter" |_ }}:</label>
            <div class="input-box">
                <input type="text" name="email" id="newsletter" title="{{ "Sign up for our newsletter" |_ }}" class="input-text required-entry validate-email">
            </div>
            <div class="actions">
                <button type="submit" title="{{ "Subscribe" |_ }}" class="button"><span><span>{{ "Subscribe" |_ }}</span></span></button>
            </div>
        </div>
    </form>
</div>