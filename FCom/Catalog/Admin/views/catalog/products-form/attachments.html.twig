{% set m = THIS.get('model') %}
{% set prodAttachConfig = APP.instance('FCom_Catalog_Admin_Controller_Products').productAttachmentsGridConfig(m) %}

{% import THIS.view('core/form-elements').twigName() as forms %}

{% set type = 'attachments' %}
{% set targetType = 'product' %}
{% set medialibConfig = {id: 'all_' ~ type, type: 'product-attachments'} %}

{% set attachment_tab_config = {
    type: type,
    targetType: targetType,
    elementContainer: '#tab-attachments',
    medialibConfig: medialibConfig,
    gridConfig: prodAttachConfig
} %}

{{ forms.attachment_tab_content(m, attachment_tab_config) | raw }}
