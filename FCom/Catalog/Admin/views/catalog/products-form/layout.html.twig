{% set m = THIS.get('model') %}
{% set layout = m.getData('layout') %}

<fieldset>
    <div class="f-section">
        {{ THIS.view('core/layout-editor').set({
            layout: layout,
            type: 'product',
            frontend_layout_name: '/catalog/product',
        }) | raw }}
    </div>
</fieldset>
