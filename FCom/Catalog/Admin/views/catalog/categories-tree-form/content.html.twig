{% set m = THIS.model %}

<div class="form-group">
    <label class="col-md-2 control-label" for="main-content">{{ 'Content'|_ }}</label>
    <div class="col-md-5">
        <textarea id="main-content" class="form-control" name="model[content]" rows="5">{{ m.content }}</textarea>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="main-layout_update">{{ 'Layout Update'|_ }}</label>
    <div class="col-md-5">
        <textarea id="main-layout_update" class="form-control" rows="5" name="model[layout_update]">{{ m.layout_update }}</textarea>
    </div>
</div>