{% if not THIS.get('products_data').state.c %}
    <div class="alert alert-info">{{ "There are no products matching the selection." |_ }}</div>
{% else %}
    <section class="f-category-prod-listing">
      {{ THIS.view('catalog/product/pager').set('state', THIS.get('products_data').state) | raw }}
      {{ THIS.view('catalog/product/grid-tiles').set('add_wishlist', 1).set('add_compare', 1)
            .set('products', THIS.get('products_data').rows)
            .set('category', THIS.get('category')) | raw }}
    </section>
{% endif %}
