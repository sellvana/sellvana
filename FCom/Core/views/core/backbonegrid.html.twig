      <div class="col-sm-7">
        <span class="{{ config.id }} dropdown dd dd-nestable filter-span" style="display:inline;">
            <a data-toggle="dropdown" class="dropdown-toggle showhide_columns grid-refresh" href="javascript:void()" style="margin-left: 20px;">
                Columns
