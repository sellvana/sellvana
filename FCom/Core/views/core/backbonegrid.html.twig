    <div class="row datatables-top  {{ config.id | raw }}">
          <div class="col-sm-9">
          {% if filterData[0] %}
            <span><label>Filters:&nbsp;</label></span>
            <span>
              <!-- filter buttons here -->
            </span>
          {% endif %}
          </div>
          <div class="col-sm-3 text-right">

