{% set m = THIS.model %}

<fieldset name="adm-section-group">
    <div class="form-group">
        <label class="col-md-2 control-label" for="model-title">{{ 'Title'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-title" name="model[title]" value="{{ THIS.q(m.get('title')) }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-text">{{ 'Text'|_ }}</label>
        <div class="col-md-5">
            <textarea class="form-control" id="model-text" name="model[text]" rows="5" cols="35">{{ THIS.q(m.get('text')) }}</textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-rating">{{ 'Rating of product'|_ }}</label>
        <div class="col-md-5">
            <input type="text" class="form-control" id="model-rating" name="model[rating]" value="{{ THIS.q(m.get('rating')) }}"/>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-helpful">{{ 'Helpful points'|_ }}</label>
        <div class="col-md-5">
            <input type="text" class="form-control" id="model-helpful" name="model[helpful]" value="{{ THIS.q(m.get('helpful')) }}"/>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-approved">{{ 'Approved'|_ }}</label>
        <div class="col-md-5">
            <input class="switch-cbx" id="model-approved" type="checkbox" name="model[approved]" value="1" {% if m.get('approved') == 1 %}checked="checked" {% endif %} />
        </div>
    </div>
</fieldset>
