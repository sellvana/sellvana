{% set logoSrc = APP.src('@FCom_Core/img/sellvana-logo.png') %}
{% set storeName = CONFIG.get('modules/FCom_Core/store_name') %}

<nav class="f-site-header-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="{{ APP.href() }}" title="{{ storeName }}"><img src="{{ logoSrc }}" alt="{{ storeName }}"/></a>
    </div>
    <ul class="nav navbar-nav navbar-right f-header-util-links">
      {{ THIS.hook('header-top-util') | raw }}
    </ul>
    {{ THIS.hook('header-top-search', { for_mobile: false }) | raw }}
  </div>
  <div class="f-header-search-bar visible-xs">
    <div class="container">
      <a href="#" class="navbar-toggle pull-left" data-toggle="collapse" data-target=".f-catalog-navbar .navbar-nav">
        <span class="f-navbar-toggle-icon">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </span>
        {{ 'Browse' | _ }}
      </a>
      {{ THIS.hook('header-top-search', { for_mobile: true }) | raw }}
    </div>
  </div>
</nav><!-- /#site-header-top -->
